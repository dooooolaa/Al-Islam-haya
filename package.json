{
  "name": "dorar-hadiths-fetcher",
  "version": "1.0.0",
  "description": "Script to fetch hadiths from Dorar.net",
  "main": "src/scripts/fetchDorarHadiths.ts",
  "type": "module",
  "scripts": {
    "start": "node --loader ts-node/esm src/scripts/fetchDorarHadiths.ts",
    "server": "node --loader ts-node/esm src/server/index.ts",
    "client": "vite",
    "dev": "concurrently \"npm run server\" \"npm run client\""
  },
  "dependencies": {
    "axios": "^1.6.7",
    "cheerio": "^1.0.0-rc.12",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "sqlite3": "^5.1.7",
    "better-sqlite3": "^9.4.3",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "vite": "^5.1.4",
    "@vitejs/plugin-react": "^4.2.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "@types/cheerio": "^0.22.35",
    "@types/better-sqlite3": "^7.6.9",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "concurrently": "^8.2.2"
  }
}
